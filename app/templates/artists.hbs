<div class="grid grid-cols-4 grid-rows-5 md:grid-rows-4 md:grid-cols-5">
  {{#each (shuffle 
    (append 
      (flatten @model) 
      (array "dummy" "dummy" "dummy" "dummy" "dummy" "dummy")
    )
   ) as |artist|}}
    <div class="relative p-1 md:p-2">
      {{#if (eq artist "dummy")}}
        <p>&nbsp;</p>
      {{else}}
        <LinkTo @route="artists.artist" @model={{artist}} >
          <img 
            src="{{artist.avatarUrl}}" 
            alt="{{artist.firstName}} {{artist.lastName}}"
            class="w-full h-full"
          />
          <div class="absolute bottom-0 w-full left-0 p-1 md:p-2">
            <div class="bg-black w-full text-white p-1 flex flex-col items-end opacity-75">
              {{svg-jar artist.team.slug height="1rem" class="fill-current"}}
            </div>
          </div>
        </LinkTo>
      {{/if}}
    </div>
  {{/each}}
</div>
