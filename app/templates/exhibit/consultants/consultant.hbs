<div class="flex flex-col space-y-4 md:space-y-4 pb-6 md:pb-4">
  <LinkTo @route="exhibit.consultants" role="button">
    {{svg-jar "team-o" class="fill-current h-6 md:h-12"}}
  </LinkTo>
  <div class="flex flex-col justify-between h-full">
    <h2 class="pt-2 uppercase text-sm md:text-base font-bold">{{@model.firstName}} {{@model.lastName}}</h2>
  </div>
  <div class="flex flex-col md:flex-row w-full">
    <div class="w-full md:w-2/5 md:pr-16">
      <img src="{{@model.avatarUrl}}" class="w-full" alt="{{@model.firstName}} {{@model.lastName}}" />
    </div>
    <div class="w-full md:w-3/5 py-8 md:py-0">
      <p class="pb-8" >{{#each @model.teams as |team|}}
          <LinkTo 
            @route="exhibit.teams.team" 
            @model={{team}}
            role="button"
            class="text-black hover:text-accent-500">
            {{svg-jar team.id class="fill-current h-5 inline"}}
          </LinkTo>
        {{/each}}
      </p>
      <TextBox @markdownPath={{concat "consultants/" @model.id}}>

          <p class="uppercase">
            {{#if @model.instagramName}}
              <a target="_blank" rel="noreferrer noopener" href="https://instagram.com/{{@model.instagramName}}">
                {{svg-jar "instagram" class="fill-current inline h-6"}}
                <span class="sr-only">{{@model.fullName}}â€™s Instagram account</span>
              </a> 
            {{/if}}
            <a href="{{@model.websiteUrl}}" rel="noreferrer noopener" target="_blank">
              {{if @model.instagramName "/" ""}}Consultant Website</a></p>

      </TextBox>
    </div>
  </div>
</div>
