{{outlet}}
<div class="flex flex-col w-screen space-y-1">
{{#each (shuffle @model.teams) as |team|}}
  <TeamBlock @team={{team}} />
{{/each}}
<section class="flex flex-row h-32 md:h-64">
  <header class="h-full w-2/5 flex-grow-0 flex flex-col justify-start space-y-2 md:space-y-4">
      <h2>
        <LinkTo 
          @route="exhibit.consultants" 
          class="hover:text-accent-500 text-xs md:text-base font-bold uppercase"
          > 
          TEAM /O
        </LinkTo>
      </h2>
      <div class="py-1">
        <LinkTo @route="exhibit.consultants" class="hover:text-accent-500"> 
          {{svg-jar "team-o" class="fill-current h-6 md:h-12"}}
        </LinkTo>
      </div>
      <h3 class="text-2xs md:text-base leading-normal pb-2">
        Teamsâ€™ Consultants<br>
        <span class="uppercase">
        {{#let (shuffle @model.consultants) as |consultants|}}
          {{#let (object-at 0 consultants) as |consultant|}}
            <LinkTo @route="exhibit.consultants.consultant"
              @model={{consultant}}
              class="hover:text-accent-500">
              <span class="hidden md:inline">
                {{consultant.firstName}}
              </span>
              {{consultant.lastName}}
            </LinkTo>
          {{/let}}
          {{#let (object-at 1 consultants) as |consultant|}}
          <br>
          /<LinkTo @route="exhibit.consultants.consultant" 
              @model={{consultant}}
              class="hover:text-accent-500"><span class="hidden md:inline">{{consultant.firstName}} </span>{{consultant.lastName}}
            </LinkTo>
          {{/let}}
          {{#let (object-at 2 consultants) as |consultant|}}
          <br>
          /<LinkTo @route="exhibit.consultants.consultant" 
              @model={{consultant}}
              class="hover:text-accent-500"><span class="hidden md:inline">{{consultant.firstName}} </span>{{consultant.lastName}}
            </LinkTo>
          {{/let}}
        {{/let}}
        </span>
      </h3>
  </header>
  <div class="w-3/5">
    <TeamClips @clickRoute="exhibit.teams.index.clip" @clips={{@model.consultantClips}} @dummies={{true}} @consultants={{true}} />
  </div>
</section>
</div>

