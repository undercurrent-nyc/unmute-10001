<div class="h-full flex justify-center items-center pr-1">
{{#if (eq @clip "dummy")}}
    <div class="bg-white h-full w-32 md:w-64">&nbsp;</div>
{{else}}
    <div class="relative h-full w-32 md:w-64"> 
      <img src="{{@clip.thumbnailUrl}}" class="h-full w-full" alt="{{@clip.title}}">
      <LinkTo @route={{@clickRoute}} @model={{@clip}}
        {{on "mouseover" this.toggleShaded}}
        {{on "mouseout" this.toggleShaded}}
        >
        <div class="z-15 hover:opacity-50 {{if this.shaded "opacity-50" "opacity-0"}} absolute bottom-0 left-0 w-full h-full bg-black">&nbsp;</div>
      </LinkTo>
      <div class="pointer-events-none absolute bottom-0 left-0 text-white flex flex-col justify-end p-4 md:p-6 z-20">
        <LinkTo 
          class="pointer-events-auto uppercase font-bold text-sm md:text-xl"
          
          @route={{@clickRoute}} @model={{@clip}} 
          {{on "mouseover" this.toggleShaded}} 
          {{on "mouseout" this.toggleShaded}}
          >
          <p class="{{if this.shaded "opacity-100 text-accent-500" "opacity-0"}} hover:opacity-100">
            {{@clip.title}}<br>
            {{format-date @clip.postDate}}
          </p>
        </LinkTo>
      </div>
    </div>
{{/if}}
</div>
