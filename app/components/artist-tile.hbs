<div class="artist-tile">
    <img 
      src="{{@artist.avatarUrl}}" 
      alt="{{@artist.firstName}} {{@artist.lastName}}"
      class="w-full h-full"
    />
  <LinkTo @route="exhibit.artists.artist" @model={{@artist}} 
    {{on "mouseover" this.toggleShaded}}
    {{on "mouseout" this.toggleShaded}}
  >
    <div class="z-15 hover:opacity-50 {{if this.shaded "opacity-50" "opacity-0"}} absolute bottom-0 left-0 w-full h-full bg-black">&nbsp;</div>
  </LinkTo>
  <div class="pointer-events-none absolute bottom-0 left-0 text-white flex flex-col justify-end p-4 md:p-6 z-20">
      <LinkTo 
        class="pointer-events-auto uppercase font-bold text-sm md:text-xl"
        
        @route="exhibit.artists.artist" @model={{@artist}} {{on "mouseover" this.toggleShaded}} {{on "mouseout" this.toggleShaded}}>
      <p class="{{if this.shaded "opacity-100" "opacity-0"}} hover:opacity-100 pb-6 md:pb-8">
         {{@artist.fullName}}
      </p>
    </LinkTo>
    <LinkTo
      class="pointer-events-auto text-white"
      @route="exhibit.teams.team" @model={{@artist.team}}
      {{on "mouseover" this.toggleShaded}}
      {{on "mouseout" this.toggleShaded}}
      >
      <p class="uppercase text-xs md:text-base">{{@artist.team.slashName}}</p>
      {{svg-jar @artist.team.id class="h-8 fill-current"}}
    </LinkTo>
  </div>
</div>
