{{#if (not-eq this.router.currentRouteName "splash_page")}}
  <LargeHeader @onEnter={{this.onEnter}} @onExit={{this.onExit}} />
{{/if}}
<h1 class="sr-only">10001</h1>
<header class="w-full p-6 md:p-10 h-24 md:h-40 sticky top-0 bg-white flex flex-row justify-between z-50">
  <div class="flex-grow-0 h-16">
    <a href="https://undercurrent.nyc">
      <p class="sr-only">Undercurrent Website</p>
      {{svg-jar "undercurrent" class="fill-current h-10 md:h-16"}}
    </a>
  </div>
  <div class="pl-10 flex flex-grow flex-col">
    <AnimatedContainer class="flex w-full justify-end">
      {{#animated-if this.showSmallHeader use=this.transition}}
        <LinkTo @route="index" class="hover:text-accent-500 pb-2">
          {{svg-jar "header-small" class="fill-current h-10 md:h-12"}}
        </LinkTo>
      {{/animated-if}}
    </AnimatedContainer>
    <NavBar />
  </div>
</header>
